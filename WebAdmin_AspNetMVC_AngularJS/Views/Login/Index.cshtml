@{
    ViewBag.Title = "Área Administrativa";
}

<div class="well well-lg login">
    <h3 class="text-center">Área Administrativa</h3>
    <hr />

    <form action="@Url.Action("Autenticar")" method="post">
        <div class="text-center">
            @Html.ValidationMessage("login.Invalido", new { @class = "text-danger" })
        </div>

        @Html.AntiForgeryToken()

        <div class="form-group">
            <label for="email">E-mail:</label>
            <input type="email" class="form-control" id="email" name="email">
        </div>
        <div class="form-group">
            <label for="senha">Senha:</label>
            <input type="password" class="form-control" id="senha" name="senha">
        </div>

        <div class="form-group text-right">
            <button type="submit" class="btn btn-default "><i class="fa fa-sign-in"></i> Entrar</button>
        </div>
    </form>
</div>